{
        "manifest_version": 3,
        "name": "Jira Search",
        "version": "1.0",
        "description": "Open Jira Search in a new tab with the selected text",
        "permissions": ["contextMenus", "activeTab", "storage"],
        "background": {
            "service_worker": "background.js"
        },
        "icons": {
            "48": "icon.png"
        },
        "host_permissions": ["http://*/*", "https://*/*" ]
}
